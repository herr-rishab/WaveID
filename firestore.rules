rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    function isSignedIn() { return request.auth != null; }
    function userDoc() { return get(/databases/$(database)/documents/users/$(request.auth.uid)); }
    function userRole() { return isSignedIn() ? userDoc().data.role : null; }
    function studentId() { return isSignedIn() ? userDoc().data.studentId : null; }
    function isAdmin() { return userRole() == 'admin'; }
    function isSpc() { return userRole() == 'spc'; }
    function isStudent() { return userRole() == 'student'; }
    function isActiveSession(sessionId) {
      return exists(/databases/$(database)/documents/sessions/$(sessionId))
        && get(/databases/$(database)/documents/sessions/$(sessionId)).data.status == 'active';
    }
    function sessionDrive(sessionId) {
      return get(/databases/$(database)/documents/sessions/$(sessionId)).data.driveId;
    }
    function isActiveDriveStudent(driveId) {
      return exists(/databases/$(database)/documents/drive_students/$(driveId + '_' + studentId()))
        && get(/databases/$(database)/documents/drive_students/$(driveId + '_' + studentId())).data.active == true;
    }

    match /users/{userId} {
      allow read: if isSignedIn() && (request.auth.uid == userId || isAdmin());
      allow create, update: if isAdmin()
        || (isSignedIn()
          && request.auth.uid == userId
          && request.resource.data.role == 'admin'
          && request.resource.data.adminCode == 'PRESENTSIR_ADMIN_2026');
    }

    match /drives/{driveId} {
      allow read: if isSignedIn();
      allow write: if isAdmin();
    }

    match /students/{studentIdDoc} {
      allow read: if isAdmin() || isSpc();
      allow write: if isAdmin();
    }

    match /drive_students/{docId} {
      allow read: if isAdmin() || isSpc() || (isStudent() && resource.data.studentId == studentId());
      allow write: if isAdmin();
    }

    match /sessions/{sessionId} {
      allow read: if isSignedIn();
      allow create: if isAdmin() || isSpc();
      allow update: if isAdmin() || isSpc();
      allow delete: if isAdmin();
    }

    match /attendance/{attendanceId} {
      allow read: if isAdmin() || isSpc() || (isStudent() && resource.data.studentId == studentId());
      allow create: if isAdmin()
        || (isStudent()
          && request.resource.data.keys().hasOnly([
            'sessionId',
            'driveId',
            'studentId',
            'markedAt',
            'deviceId'
          ])
          && request.resource.data.studentId == studentId()
          && request.resource.data.sessionId is string
          && request.resource.data.driveId is string
          && request.resource.data.sessionId.size() > 0
          && request.resource.data.driveId.size() > 0
          && request.resource.data.markedAt is timestamp
          && isActiveSession(request.resource.data.sessionId)
          && sessionDrive(request.resource.data.sessionId) == request.resource.data.driveId
          && isActiveDriveStudent(request.resource.data.driveId)
        );
      allow update, delete: if isAdmin();
    }
  }
}
